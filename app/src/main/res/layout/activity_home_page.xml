<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".app.presentation.pages.HomePageActivity">

    <!-- Header -->
    <com.example.btl_nhom1.app.presentation.common.CustomHeaderView
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- Khu vực nội dung chính với ScrollView -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/customBottomNav"
        android:layout_below="@id/customHeader"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Container cho Slider với RelativeLayout -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Slider -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Nút trái -->
                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Trước"
                    android:elevation="8dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_left" />

                <!-- Nút phải -->
                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Sau"
                    android:elevation="8dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_right" />

            </RelativeLayout>

            <!-- Nội dung chính -->

            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/fragment_latest_products" />

            <!-- Footer -->
            <include
                android:id="@+id/includeFooter"
                layout="@layout/fragment_footer" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.example.btl_nhom1.app.presentation.common.CustomBottomNavigationView
        android:id="@+id/customBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <!-- Custom Category Drawer -->
    <com.example.btl_nhom1.app.presentation.common.CustomCategoryDrawer
        android:id="@+id/customCategoryDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>