<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <com.example.btl_nhom1.app.presentation.common.CustomHeaderView
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customHeader"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_back"
        android:drawablePadding="8dp"
        android:text="Quay lại"
        android:textColor="#003468"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBack"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Giỏ Hàng"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llSelectAllHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPageTitle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbSelectAll"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/checkbox_selector" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="Tất cả (1 sản phẩm)"
            android:textColor="#5A5A5A"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            app:tint="#999999" />
    </LinearLayout>

    <!-- Bottom Navigation - Phải ở cấp độ trên cùng của RelativeLayout -->
    <com.example.btl_nhom1.app.presentation.common.CustomBottomNavigationView
        android:id="@+id/customBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <!-- Summary and Checkout - Phải ở trên Bottom Navigation -->
    <LinearLayout
        android:id="@+id/llCartSummaryAndCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/customBottomNav"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tạm tính"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 đ"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giảm giá"
                android:textColor="#003468"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 0 đ"
                android:textColor="#003468"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng tiền"
                android:textColor="#003468"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 đ"
                android:textColor="#003468"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:text="(Giá tham khảo đã bao gồm VAT)"
            android:textColor="#5A5A5A"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_primary_bg"
            android:text="Tiếp tục"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#003468" />
    </LinearLayout>

    <!-- ScrollView for Cart Items - Ở giữa header và summary/checkout -->
    <ScrollView
        android:id="@+id/scrollCartItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llCartSummaryAndCheckout"
        android:layout_below="@id/llSelectAllHeader"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/llCartItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cart Item (giữ nguyên) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <CheckBox
                        android:id="@+id/cbItem"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:button="@drawable/checkbox_selector" />

                    <ImageView
                        android:id="@+id/ivProduct"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bongsp45_anh1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Bông tai cưới Vàng 24K PNJ Tinh Nồng 0000Y000084"
                            android:textColor="#003468"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvProductCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Mã: GB0000Y000084"
                            android:textColor="#5A5A5A"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivMinus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/quantity_button_bg"
                                android:padding="8dp"
                                android:src="@drawable/ic_minus" />

                            <TextView
                                android:id="@+id/tvQuantity"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/ivPlus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/quantity_button_bg"
                                android:padding="8dp"
                                android:src="@drawable/ic_plus" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="14.407.000 đ"
                            android:textColor="#C58C46"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Overlay Background - Để che mờ phần còn lại khi drawer mở -->
    <View
        android:id="@+id/overlayBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <!-- Panel danh mục trượt từ phải (Custom Category Drawer) -->
    <!-- Sử dụng CustomCategoryDrawer thay vì LinearLayout trực tiếp -->
    <com.example.btl_nhom1.app.presentation.common.CustomCategoryDrawer
        android:id="@+id/customCategoryDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:elevation="10dp"
        android:translationX="280dp"
        android:visibility="gone" />

</RelativeLayout>