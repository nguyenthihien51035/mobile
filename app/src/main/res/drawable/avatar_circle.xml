<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- nền trắng trong (thay bằng màu bạn muốn) -->
    <solid android:color="#FFFFFF" />

    <!-- border: chỉnh width/màu nếu cần -->
    <stroke
        android:width="2dp"
        android:color="#E0E0E0" />

    <!-- padding bên trong để ảnh không chạm viền -->
    <size
        android:width="80dp"
        android:height="80dp" />
</shape>
